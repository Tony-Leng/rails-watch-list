  <div>
    <div class="item card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key) : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTPQDYau3Hs4-xw1i8jVSUY4BlF4FLmg8lQqg&usqp=CAU' %>)">
    <h1><%= @list.name %></h1>
  </div>

  <%= link_to "Add Bookmark",  new_list_bookmark_path(@list), class: "btn-add" %>

  <% @list.bookmarks.each do |bookmark| %>
  <div class="card-trip">
      <%= image_tag bookmark.movie.poster_url, alt: "poster" %>
    <div class="card-trip-infos">
    <div>
      <h2><%= bookmark.movie.title %></h2>
      <p><%= bookmark.movie.overview %></p>
      <p><%= bookmark.comment %></p>
    </div>
    </div>
  </div>
  <% end %>
